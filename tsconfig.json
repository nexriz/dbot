{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": false,
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true
    },
    "exclude": [
        "./build/",
        "./node_modules/",
    ],
    "include": [
        "./src/*/.ts",
        "./src/*.ts"
    ]
}